@page "/Admin/ClausesList"

@attribute [Authorize(Roles="Admin, SuperAdmin")]
@inject IJSRuntime js
@inject IHttpContextAccessor HttpContextAccessor

<h1 class="ml-2">Clauses</h1>
<div class="container-fluid">
     <div class="alert alert-@AlertType alert-dismissable text-center" role="alert" hidden="@HideAlert">
        <button type = "button" class = "close" data-dismiss="alert" @onclick="@(() => resetalert())" aria-hidden = "true">
            ×
        </button>
        @AlertMessage
    </div>          
    <EditForm Model="@clause"  OnValidSubmit="@SaveGeneralInformation" class="">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
        <div class="form-group card">
            <div class="card-header">
                <h3 class="mb-3 ">New Clause</h3>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <InputText @bind-Value="clause.CreatedBy" hidden class="form-control" placeholder="Created By"/>
                    <InputDate @bind-Value="clause.Created" hidden class="form-control" placeholder="Date Created"/>                                
                </div>
                 <div class="form-row">  
                     <div class="form-group col-sm-12 col-md-4">
                        <InputText @bind-Value="clause.ClauseNumber" class="form-control" placeholder="Clause Number"/>
                    </div>   
                    <div class="form-group col-sm-12 col-md-4">
                        <InputText @bind-Value="clause.ClauseName" class="form-control" placeholder="Clause Name"/>
                    </div> 
                     <div class="form-group col-sm-12 col-md-4">
                        <InputCheckbox @bind-Value="clause.IsException" id="defaultChecked2" class="form-control-check" ></InputCheckbox>
                        <label for="defaultChecked2">Is Exception?</label>
                    </div> 
                </div>               
            </div> 
            <div class="card-footer">
                <button type="submit" class="btn btn-success mr-2 btn-sm">Save</button>
                <button type="button" class="btn btn-danger btn-sm" @onclick="@(() => Clear())">Cancel</button>
            </div>
        </div>
    </EditForm>
    <h3 class="mb-3 ">Clause List</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Clause Number</th>
                <th>Clause Name</th>
                <th>Exception</th>
                <AuthorizeView Roles="Admin, SuperAdmin">
                    <th colspan="3">Actions</th>
                </AuthorizeView>
            </tr>
        </thead>
        <tbody>
           @if(GetList == null)
            {
                <tr>
                    <td colspan="3">Loading...</td>
                </tr>
            }
            else if(GetList.Count() == 0)
            {
                <tr>
                    <td colspan="3">No clauses registered!</td>
                </tr>
            }
            else
            {
                @foreach (var d in GetList)
                {
                    <tr>
                        <td>@d.ClauseNumber</td>
                        <td>@d.ClauseName</td>    
                        <td>@d.IsException</td> 
                        <AuthorizeView Roles="Admin, SuperAdmin">
                        <td>
                            <button class="btn btn-primary btn-sm" @onclick="@(async () => await ToEdit(d.ClauseId))">Edit</button>
                            <button class="btn btn-danger btn-sm" @onclick="@(async () => await MarkAsDeleted(d.ClauseId))">Delete</button>
                        </td>
                        </AuthorizeView>
                    </tr>    
                }
            }
           
        </tbody>
    </table>
</div>

@code {
    QMSOldContext db = new QMSOldContext();
    DClauses clause = new DClauses();
    private string loggedInUser = string.Empty;
    private IEnumerable<DClauses> GetList { get; set; }
    public bool HideAlert { get; set; } = true;
    public string AlertMessage { get; set; } = string.Empty;
    public string AlertType { get; set; } = "danger";
    private void resetalert()
    {
        AlertMessage = string.Empty;
        AlertType = "danger";
        HideAlert = true;
    }
    private void AlertShow(string type, string msg)
    {
        AlertMessage = msg;
        AlertType = type;
        HideAlert = false;
    }
    private async Task SaveGeneralInformation()
    {
        try
        {
            clause.LastModifiedBy = loggedInUser;
            if(clause.ClauseId == 0)
            {
                db.DClauses.Add(clause);
            }
            else
            {
                clause.LastModifiedBy = loggedInUser;
                clause.LastModifiedOn = DateTime.Now;
                db.DClauses.Update(clause);
            }
            await db.SaveChangesAsync();
            AlertShow("success","Clause saved!");
            GetList = await GetListM();
            clause = new DClauses();
            setUser();
        }
        catch(Exception ex)
        {
            ex.InnerException.ToString();
            ex.Message.ToString();
        }
    }
    protected void Clear()
    {
        clause = new DClauses();
    }
    protected override async Task OnInitializedAsync()
    {
        setUser();
        GetList = await GetListM();
    }
    private void setUser()
    {
        clause.Created = DateTime.Now;
        var principal = HttpContextAccessor.HttpContext.User;
        loggedInUser = principal.FindFirstValue(ClaimTypes.NameIdentifier).ToString();
        clause.CreatedBy = loggedInUser;
    }
    private async Task<IEnumerable<DClauses>> GetListM()
    {
        return await db.DClauses.Where(x => x.IsDeleted.Equals(false)).ToListAsync();
    }
    protected async Task MarkAsDeleted(int id)
    {
        bool confirmed = await js.InvokeAsync<bool>("confirm", "Are you sure?");
        if (confirmed)
        {
            var clause = await db.DClauses.FirstOrDefaultAsync(x => x.ClauseId == id);
            clause.DeletedBy = loggedInUser;
            clause.DeletedOn = DateTime.Now;
            clause.LastModifiedBy = loggedInUser;
            clause.LastModifiedOn = DateTime.Now;
            clause.IsDeleted = true;
            db.DClauses.Update(clause);
            await db.SaveChangesAsync();
            AlertShow("success","Clause deleted!");
            GetList = await GetListM();
            clause = new DClauses();
            setUser();
        }

    }
    protected async Task ToEdit(int id)
    {
        clause = await db.DClauses.FirstOrDefaultAsync(x => x.ClauseId == id);
    }
}
