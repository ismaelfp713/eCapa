@page "/Admin/SubclausesList"

@attribute [Authorize(Roles="Admin, SuperAdmin")]
@inject IJSRuntime js
@inject IHttpContextAccessor HttpContextAccessor

<h1 class="ml-2">Sub Clauses</h1>
<div class="container-fluid">
    <div class="alert alert-@AlertType alert-dismissable text-center" role="alert" hidden="@HideAlert">
        <button type = "button" class = "close" data-dismiss="alert" @onclick="@(() => resetalert())" aria-hidden = "true">
            ×
        </button>
      @AlertMessage
    </div>
    <EditForm Model="@subclause"  OnValidSubmit="@SaveGeneralInformation" class="">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
        <div class="form-group card">
            <div class="card-header">
                <h3 class="mb-3 ">New Sub Clause</h3>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <InputText @bind-Value="subclause.CreatedBy" hidden class="form-control" placeholder="Created By"/>
                    <InputDate @bind-Value="subclause.Created" hidden class="form-control" placeholder="Date Created"/>                                
                </div>
                 <div class="form-row">  
                     <div class="form-group col-sm-12 col-md-2">
                        <InputText @bind-Value="subclause.SubClauseNumber" class="form-control" placeholder="Sub Clause Number"/>
                    </div>   
                    <div class="form-group col-sm-12 col-md-4">
                        <InputText @bind-Value="subclause.SubClauseName" class="form-control" placeholder="Sub Clause Name"/>
                    </div>
                    
                     <div class="form-group col-sm-12 col-md-4">
                       <InputSelect @bind-Value="ClauseId" class="form-control">
                          <option selected value="">Select Aplicable Clause</option>
                          @if(GetClauses != null)
                          {
                            @foreach (var clause in GetClauses)
                              {
                                <option value="@clause.ClauseId.ToString()">@clause.ClauseNumber @clause.ClauseName</option>
                              }
                          }                          
                    </InputSelect>
                    </div> 
                     <div class="form-group col-sm-12 col-md-2">
                        <InputCheckbox @bind-Value="@subclause.IsException" id="defaultChecked2" class="form-control-check" ></InputCheckbox>
                        <label for="defaultChecked2">Is Exception?</label>
                    </div> 
                </div>               
            </div> 
            <div class="card-footer">
                <button type="submit" class="btn btn-success mr-2 btn-sm">Save</button>
                <button type="button" class="btn btn-danger btn-sm" @onclick="@(() => Clear())">Cancel</button>
            </div>
        </div>
    </EditForm>
    <h3 class="mb-3 ">Clause List</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Sub Clause Number</th>
                <th>Sub Clause Name</th>
                <th>Exception</th>
                <AuthorizeView Roles="Admin, SuperAdmin">
                    <th colspan="3">Actions</th>
                </AuthorizeView>
            </tr>
        </thead>
        <tbody>
           @if(GetList == null)
            {
                <tr>
                    <td colspan="3">Loading...</td>
                </tr>
            }
            else if(GetList.Count() == 0)
            {
                <tr>
                    <td colspan="3">No clauses registered!</td>
                </tr>
            }
            else
            {
                @foreach (var d in GetList)
                {
                    <tr>

                        <td>@d.SubClauseNumber</td>
                        <td>@d.SubClauseName</td>  
                        <td>@d.IsException</td> 
                        <AuthorizeView Roles="Admin, SuperAdmin">
                            <td>
                                <button class="btn btn-primary btn-sm" @onclick="@(async () => await ToEdit(d.SubClauseId))">Edit</button>
                                <button class="btn btn-danger btn-sm" @onclick="@(async () => await MarkAsDeleted(d.SubClauseId))">Delete</button>
                            </td>
                       </AuthorizeView>
                    </tr>    
                }
            }           
        </tbody>
    </table>
</div>

@code {    
    QAD_QMSContext db = new QAD_QMSContext();
    DSubClauses subclause = new DSubClauses();
    DClauses clauses = new DClauses();
    public string ClauseId { get; set; }
    public string loggedInUser = string.Empty;
    public IEnumerable<DSubClauses> GetList { get; set; }
    public IEnumerable<DClauses> GetClauses{  get;  set; }
    public bool HideAlert { get; set; } = true;
    public string AlertMessage { get; set; } = string.Empty;
    public string AlertType { get; set; } = "danger";
    private void resetalert()
    {
        AlertMessage = string.Empty;
        AlertType = "danger";
        HideAlert = true;
    }
    private void AlertShow(string type, string msg)
    {
        AlertMessage = msg;
        AlertType = type;
        HideAlert = false;
    }
    public async Task SaveGeneralInformation()
    {
        try
        {
            int cid = Convert.ToInt32(ClauseId);
            subclause.ClauseId = cid;
            subclause.LastModifiedBy = loggedInUser;
            if(subclause.SubClauseId == 0)
            {
                db.DSubClauses.Add(subclause);
            }
            else
            {
                subclause.LastModifiedBy = loggedInUser;
                subclause.LastModifiedOn = DateTime.Now;
                db.DSubClauses.Update(subclause);
            }
            await db.SaveChangesAsync();
            GetList = await GetListM();
            subclause = new DSubClauses();
            ClauseId = string.Empty;
            setUser();
        }
        catch(Exception ex)
        {
            ex.InnerException.ToString();
            ex.Message.ToString();
        }
    }
    protected void Clear()
    {
        subclause = new DSubClauses();
    }
    protected override async Task OnInitializedAsync()
    {
        setUser();
        GetList = await GetListM();
        GetClauses = await GetAllClauses();
    }
    public void setUser()
    {
        subclause.Created = DateTime.Now;
        var principal = HttpContextAccessor.HttpContext.User;
        loggedInUser = principal.FindFirstValue(ClaimTypes.NameIdentifier).ToString();
        subclause.CreatedBy = loggedInUser;
    }
    public async Task<IEnumerable<DSubClauses>> GetListM()
    {
        return await db.DSubClauses.Where(x => x.IsDeleted == false).ToListAsync();
    }
    public async Task<IEnumerable<DClauses>> GetAllClauses()
    {
        return await db.DClauses.Where(x => x.IsDeleted == false && x.IsException == false).ToListAsync();
    }
    protected async Task MarkAsDeleted(int id)
    {
        bool confirmed = await js.InvokeAsync<bool>("confirm", "Are you sure?");
        if (confirmed)
        {
            var clause = await db.DSubClauses.FirstOrDefaultAsync(x => x.SubClauseId == id);
            clause.DeletedBy = loggedInUser;
            clause.DeletedOn = DateTime.Now;
            clause.LastModifiedBy = loggedInUser;
            clause.LastModifiedOn = DateTime.Now;
            clause.IsDeleted = true;
            db.DSubClauses.Update(clause);
            await db.SaveChangesAsync();
            GetList = await GetListM();
            clause = new DSubClauses();
            setUser();
        }
    }
    protected async Task ToEdit(int id)
    {
        subclause = await db.DSubClauses.FirstOrDefaultAsync(x => x.SubClauseId == id);
    }
}
