<div class="top-row pl-4 navbar navbar-dark d-print-none">
    <a class="navbar-brand" href="/"><img src="/logo.png" class="mr-2 logo">CAPA</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>
<div class="@NavMenuCssClass d-print-none" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Horizontal">
                <span class="oi oi-home" aria-hidden="true"></span> Horizontal 8D
            </NavLink>
        </li>
        <AuthorizeView Roles="Admin, SuperAdmin, User">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Admin/D0" @onclick="@(()=>HandleClick("Admin/D0"))">
                    <span class="oi oi-plus" aria-hidden="true"></span> New CAPA
                </NavLink>
            </li>
            <li class="nav-item px-3" id="admin-nav-link">
                <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                    <span class="oi oi-cog" aria-hidden="true"></span> Admin
                </NavLink>
            </li>
        </AuthorizeView>
        @if (expandSubNav)
        {
            <AuthorizeView Roles="Admin, SuperAdmin">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/CustomersList" @onclick="@(()=>HandleClick("Admin/CustomersList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Customers
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/DepartmentsList" @onclick="@(()=>HandleClick("Admin/DepartmentsList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Departments
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/ProcessList" @onclick="@(()=>HandleClick("Admin/ProcessList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Processes
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/StandardList" @onclick="@(()=>HandleClick("Admin/StandardList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Standards
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/ClausesList" @onclick="@(()=>HandleClick("Admin/ClausesList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Clauses
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/SubclausesList" @onclick="@(()=>HandleClick("Admin/SubclausesList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Sub Clauses
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/ProcessRoleList" @onclick="@(()=>HandleClick("Admin/ProcessRoleList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Process Roles
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/PartnumberList" @onclick="@(()=>HandleClick("Admin/PartnumberList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Part Numbers
                    </NavLink>
                </li>
            </AuthorizeView>
            <AuthorizeView Roles="SuperAdmin">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/SystemRoleList" @onclick="@(()=>HandleClick("Admin/SystemRoleList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> System Roles
                    </NavLink>
                </li>
            </AuthorizeView>
            <AuthorizeView Roles="SuperAdmin">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Admin/UsersList" @onclick="@(()=>HandleClick("Admin/UsersList"))">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Users
                    </NavLink>
                </li>
            </AuthorizeView>
        }
    </ul>
</div>
@code {
    private bool collapseNavMenu = true;
    private bool expandSubNav;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    @inject NavigationManager NavigationManager;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void HandleClick(string page)
    {
        NavigationManager.NavigateTo(page, true);       
    }
}
